---
import Layout from "../layouts/Layout.astro";
import { fade } from "astro:transitions";
import Close from "@components/icons/close.astro";
import Hero from "@components/About/Hero.astro";
import Nosotros from "@components/About/Nosotros.astro";
---

<Layout title="TheCondorVision - About">
  <main
    class="overflow-x-hidden"
    transition:animate={fade({ duration: "0.8s" })}
  >
    <Hero />
    <a href="/">
      <Close class="fixed top-4 right-4 w-8 h-8 hover:stroke-white" />
    </a>
    <Nosotros />
  </main>
</Layout>
